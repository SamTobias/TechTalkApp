<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TechTalkApp" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="android:colorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/yellow</item>
    </style>

    <style name="Theme.TechTalkApp.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/yellow</item>
    </style>
</resources>